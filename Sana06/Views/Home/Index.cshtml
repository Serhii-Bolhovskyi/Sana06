@{
    ViewData["Title"] = "Home Page";
}
@model List<Skill>

<div class="container mx-auto p-3">
    <div class="d-flex gap-5">
        <div >
            <img class="rounded-circle" src="~/images/personal.jpg" alt="Моє фото" width="200" height="200">
        </div>
        <div class="d-flex flex-column gap-1">
            <h1 class="fs-1">Serhii Bolkhovskyi</h1>
            <p class="fs-4 opacity-75">Software Engineer</p>
            <div class="d-flex gap-2">
                <a href="https://github.com/Serhii-Bolhovskyi" target="_blank" rel="noopener noreferrer">
                    <img src="~/images/github.svg" alt="Git Hub">
                </a>
                <a href="https://www.linkedin.com/in/serhii-bolhovskyi-235503261" target="_blank" rel="noopener noreferrer">
                    <img src="~/images/linkedin.svg.svg" alt="Linkedin">
                </a>
            </div>
        </div>
    </div>
    <div class="d-flex flex-column mt-4">
        <h1 class="fs-1">About me</h1>
        <p class="abt-me">Hi! I’m a first-year university student majoring in Software Engineering. I have over a year of experience in frontend development, working with technologies such as <strong>HTML, CSS, JavaScript, React, and TailwindCSS</strong>. Currently, I am taking a course in <strong>C# and ASP.NET</strong>  at Sana Commerce, which helps me expand my backend development knowledge.My favorite activity is creating user-friendly interfaces and solving technical problems that make websites more convenient.</p>
    </div>
    <div class="d-flex flex-column mt-3">
        <h1 class="fs-1">Skills</h1>
        <div class="d-flex gap-3 fs-5 parent flex-wrap">
            @foreach (var skill in Model)
            {
            <div class="border d-inline-block px-3 py-2 rounded-3 hover:scale-105">
                <p>@skill.Name</p>
            </div>
            }
        </div>
    </div>
</div>