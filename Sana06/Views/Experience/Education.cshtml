@model EducationViewModel

<h2 class="text-center mb-4">Education</h2>
<ul class="list-unstyled d-flex flex-column gap-3 text-center">
    @foreach (var edu in Model.Education)
    {
    <li class="proj d-flex flex-column text-start fs-4 gap-3 rounded-3 py-4 px-4 shadow-sm bg-light">
        <h3 class="fw-bold">@edu.Name</h3>
        <p class="fs-5 text-muted">@edu.Institution</p>
        <span class="badge bg-primary">@edu.Year</span>
        <span class="badge bg-success">@edu.Status</span>
    </li>
    }
</ul>

<h2 class="text-center mb-4">Courses</h2>
<ul class="list-unstyled d-flex flex-column gap-3 text-center">
    @foreach (var course in Model.Courses)
    {
    <li class="proj d-flex flex-column text-start fs-4 gap-3 rounded-3 py-4 px-4 shadow-sm bg-light">
        <h3 class="fw-bold">@course.Name</h3>
        <p class="fs-5 text-muted">@course.Platform</p>
        <span class="badge bg-primary">@course.Year</span>
        <span class="badge bg-success">@course.Status</span>
        <div class="mt-2">
            <h5 class="fw-semibold">Technologies:</h5>
            <ul class="list-inline">
                @foreach (var tech in course.Technologies)
                {
                <li class="list-inline-item badge bg-secondary">@tech</li>
                }
            </ul>
        </div>
    </li>
    }
</ul>